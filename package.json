{
  "name": "@meteorlxy/create",
  "version": "0.0.0",
  "description": "Create JavaScript Project",
  "keywords": [
    "create",
    "scaffolding"
  ],
  "homepage": "https://github.com/meteorlxy/create#readme",
  "bugs": {
    "url": "https://github.com/meteorlxy/create/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/meteorlxy/create.git"
  },
  "license": "MIT",
  "author": "meteorlxy",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": {
    "create": "bin/create.js"
  },
  "files": [
    "bin",
    "lib"
  ],
  "scripts": {
    "build": "tsc -b",
    "clean": "tsc -b --clean",
    "copy": "copyfiles -a -u 1 \"src/**/templates/**/*\" lib",
    "dev": "tsc -b --watch",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "prepare": "husky install",
    "prepublishOnly": "npm run clean && npm run build && npm run copy && npm run lint",
    "publish": "git push origin master --tags",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s -r 1 && git add CHANGELOG.md"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix",
    "*.{json,md,yml}": "prettier --write",
    "package.json": "sort-package-json"
  },
  "prettier": "@meteorlxy/prettier-config",
  "dependencies": {
    "chalk": "^4.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.0",
    "@commitlint/config-conventional": "^12.1.0",
    "@meteorlxy/eslint-config-prettier": "^2.0.0",
    "@meteorlxy/eslint-config-prettier-typescript": "^2.0.0",
    "@meteorlxy/prettier-config": "^2.0.0",
    "@types/node": "^14.14.34",
    "conventional-changelog-cli": "^2.1.1",
    "copyfiles": "^2.4.1",
    "eslint": "^7.22.0",
    "husky": "^5.1.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "typescript": "^4.2.3"
  },
  "engines": {
    "node": ">=12.0.0"
  }
}
