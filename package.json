{
  "name": "@meteorlxy/create",
  "version": "4.0.1",
  "description": "Create JavaScript Project",
  "keywords": [
    "create",
    "scaffolding"
  ],
  "homepage": "https://github.com/meteorlxy/create#readme",
  "bugs": {
    "url": "https://github.com/meteorlxy/create/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/meteorlxy/create.git"
  },
  "license": "MIT",
  "author": "meteorlxy",
  "type": "module",
  "imports": {
    "#templates/*": "./templates/*"
  },
  "exports": {
    ".": "./lib/index.mjs",
    "./package.json": "./package.json"
  },
  "main": "./lib/index.mjs",
  "types": "./lib/index.d.mts",
  "bin": {
    "create": "./bin/create.mjs"
  },
  "files": [
    "bin",
    "lib",
    "templates"
  ],
  "scripts": {
    "build": "tsc -b",
    "clean": "rimraf lib *.tsbuildinfo",
    "dev": "pnpm build && pnpm dev:clean && node bin/create.mjs dev",
    "dev:clean": "rimraf dev",
    "format": "prettier --write .",
    "lint": "eslint . && prettier --check . && ls-lint",
    "lint:fix": "eslint . --fix && prettier --write .",
    "prepare": "husky",
    "publish": "git push origin main --tags",
    "release": "pnpm release:check && pnpm release:version && pnpm release:publish",
    "release:changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "release:check": "pnpm clean && pnpm build && pnpm lint",
    "release:publish": "pnpm publish",
    "release:version": "bumpp --execute=\"pnpm release:changelog\" --commit \"build: publish v%s\" --all"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.!(js|mjs|mts)": "prettier --write --ignore-unknown",
    "*.(js|mjs|mts)": [
      "eslint --fix",
      "prettier --write"
    ],
    "package.json": "sort-package-json"
  },
  "prettier": "@meteorlxy/prettier-config",
  "dependencies": {
    "chalk": "^5.4.1",
    "ejs": "^3.1.10",
    "execa": "^9.6.0",
    "fs-extra": "^11.3.0",
    "lodash.merge": "^4.6.2",
    "ora": "^8.2.0",
    "prompts": "^2.4.2",
    "sort-package-json": "^3.4.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@ls-lint/ls-lint": "^2.3.1",
    "@meteorlxy/create": "link:",
    "@meteorlxy/eslint-config": "^6.3.0",
    "@meteorlxy/prettier-config": "^6.2.0",
    "@meteorlxy/tsconfig": "^6.0.0",
    "@types/ejs": "^3.1.5",
    "@types/fs-extra": "^11.0.4",
    "@types/lodash.merge": "^4.6.9",
    "@types/node": "^24.0.10",
    "@types/prompts": "^2.4.9",
    "bumpp": "^10.2.0",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "^9.30.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.8.3"
  },
  "packageManager": "pnpm@10.12.4",
  "engines": {
    "node": ">=20.12.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
