{
  "name": "@meteorlxy/create",
  "version": "0.5.2",
  "description": "Create JavaScript Project",
  "keywords": [
    "create",
    "scaffolding"
  ],
  "homepage": "https://github.com/meteorlxy/create#readme",
  "bugs": {
    "url": "https://github.com/meteorlxy/create/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/meteorlxy/create.git"
  },
  "license": "MIT",
  "author": "meteorlxy",
  "type": "commonjs",
  "exports": "./lib/index.js",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "bin": {
    "create": "./bin/create.js"
  },
  "files": [
    "bin",
    "lib"
  ],
  "scripts": {
    "build": "tsc -b",
    "clean": "rimraf lib *.tsbuildinfo",
    "copy": "copyfiles -a -u 1 \"src/**/templates/**/*\" lib",
    "dev": "tsc -b --watch",
    "lint": "eslint --ext .js,.ts .",
    "prepare": "husky install",
    "prepublishOnly": "pnpm run clean && pnpm run build && pnpm run copy && pnpm run lint",
    "publish": "git push origin main --tags",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s -r 1 && git add CHANGELOG.md"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,ts}": "eslint --fix",
    "*.{json,md,yml}": "prettier --write",
    "package.json": "sort-package-json"
  },
  "prettier": "@meteorlxy/prettier-config",
  "dependencies": {
    "chalk": "^4.1.2",
    "ejs": "^3.1.7",
    "execa": "^5.1.1",
    "fs-extra": "^10.1.0",
    "lodash.merge": "^4.6.2",
    "ora": "^5.4.0",
    "prompts": "^2.4.2",
    "sort-package-json": "^1.57.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@ls-lint/ls-lint": "^1.11.0",
    "@meteorlxy/eslint-config-prettier": "^2.9.0",
    "@meteorlxy/eslint-config-prettier-typescript": "^2.9.0",
    "@meteorlxy/prettier-config": "^2.7.0",
    "@meteorlxy/tsconfig": "^2.7.0",
    "@types/ejs": "^3.1.0",
    "@types/fs-extra": "^9.0.13",
    "@types/lodash.merge": "^4.6.7",
    "@types/node": "^17.0.31",
    "@types/prompts": "^2.0.14",
    "conventional-changelog-cli": "^2.2.2",
    "copyfiles": "^2.4.1",
    "eslint": "^8.15.0",
    "husky": "^8.0.0",
    "lint-staged": "^12.4.1",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.4"
  },
  "engines": {
    "node": ">=14",
    "pnpm": ">=7"
  },
  "publishConfig": {
    "access": "public"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "eslint-plugin-import"
      ]
    }
  }
}
