{
  "name": "@meteorlxy/create",
  "version": "2.1.0",
  "description": "Create JavaScript Project",
  "keywords": [
    "create",
    "scaffolding"
  ],
  "homepage": "https://github.com/meteorlxy/create#readme",
  "bugs": {
    "url": "https://github.com/meteorlxy/create/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/meteorlxy/create.git"
  },
  "license": "MIT",
  "author": "meteorlxy",
  "type": "module",
  "imports": {
    "#templates/*": "./templates/*"
  },
  "exports": {
    ".": "./lib/index.mjs",
    "./package.json": "./package.json"
  },
  "main": "./lib/index.mjs",
  "types": "./lib/index.d.mts",
  "bin": {
    "create": "./bin/create.mjs"
  },
  "files": [
    "bin",
    "lib",
    "templates"
  ],
  "scripts": {
    "build": "tsc -b",
    "clean": "rimraf lib *.tsbuildinfo",
    "dev": "pnpm build && rimraf dev && node bin/create.mjs dev",
    "format": "prettier --write .",
    "lint": "eslint --ext .cjs,.mjs,.mts . && prettier --check . && ls-lint",
    "lint:fix": "eslint --ext .cjs,.mjs,.mts . --fix && prettier --write .",
    "prepare": "husky install",
    "prepublishOnly": "pnpm run clean && pnpm run build && pnpm run lint",
    "publish": "git push origin main --tags",
    "test": "rimraf .output && create .output",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s -r 1 && git add CHANGELOG.md"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "*.{cjs,.mjs,mts}": "eslint --fix",
    "package.json": "sort-package-json"
  },
  "prettier": "@meteorlxy/prettier-config",
  "dependencies": {
    "chalk": "^5.3.0",
    "ejs": "^3.1.9",
    "execa": "^8.0.1",
    "fs-extra": "^11.1.1",
    "lodash.merge": "^4.6.2",
    "ora": "^7.0.1",
    "prompts": "^2.4.2",
    "sort-package-json": "^2.5.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@ls-lint/ls-lint": "^2.1.0",
    "@meteorlxy/create": "link:",
    "@meteorlxy/eslint-config-prettier": "^2.27.3",
    "@meteorlxy/eslint-config-prettier-typescript": "^2.28.1",
    "@meteorlxy/prettier-config": "^2.11.0",
    "@meteorlxy/tsconfig": "^2.29.0",
    "@types/ejs": "^3.1.3",
    "@types/fs-extra": "^11.0.2",
    "@types/lodash.merge": "^4.6.7",
    "@types/node": "^20.6.5",
    "@types/prompts": "^2.4.5",
    "conventional-changelog-cli": "^4.1.0",
    "eslint": "^8.50.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.1",
    "typescript": "^5.2.2"
  },
  "packageManager": "pnpm@8.7.6",
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  }
}
