name: check

on:
  push:
    branches: [main]
  pull_request:
    branches: [main]
  workflow_dispatch:

jobs:
  check:
    strategy:
      matrix:
        os: [ubuntu-latest, windows-latest, macos-latest]
        node: ['14', '16']

    runs-on: ${{ matrix.os }}

    steps:
      - uses: actions/checkout@v3

      - name: Use Node.js ${{ matrix.node }}
        uses: actions/setup-node@v3
        with:
          node-version: ${{ matrix.node }}
          cache: <%- packageManager %>

      <%_ if (packageManager === 'npm') { _%>
      - name: Install dependencies
        run: npm ci

      - name: Lint
        run: npm run lint

      - name: Build
        run: npm run build
      <%_ } else if (packageManager === 'yarn') { _%>
      - name: Install dependencies
        run: yarn --frozen-lockfile

      - name: Lint
        run: yarn lint

      - name: Build
        run: yarn build
      <%_ } else if (packageManager === 'pnpm') { _%>
      - name: Install pnpm and dependencies
        uses: pnpm/action-setup@v2
        with:
          version: 6
          run_install: true

      - name: Lint
        run: pnpm lint

      - name: Build
        run: pnpm build
      <%_ } _%>
