name: coverage

on:
  push:
    branches:
      - main
    paths-ignore:
      - '**.md'
  pull_request:
    branches:
      - main
  workflow_dispatch:

jobs:
  coverage:
    runs-on: ubuntu-latest

    env:
      NODE_VERSION: '18'

    steps:
      - uses: actions/checkout@v3
      <%_ if (packageManager === 'pnpm') { _%>

      - name: Install pnpm
        uses: pnpm/action-setup@v2
      <%_ } _%>

      - name: Setup Node.js
        uses: actions/setup-node@v3
        with:
          node-version: ${{ env.NODE_VERSION }}
          cache: pnpm

      - name: Install dependencies
        <%_ if (packageManager === 'npm') { _%>
        run: npm ci
        <%_ } else if (packageManager === 'yarn' || packageManager === 'pnpm') { _%>
        run: <%- packageManager %> install --frozen-lockfile
        <%_ } _%>

      - name: Build source code
        run: <%- packageManager %> run build

      - name: Test coverage
        run: <%- packageManager %> run test --coverage

      - name: Coveralls
        uses: coverallsapp/github-action@master
        with:
          github-token: ${{ secrets.GITHUB_TOKEN }}
