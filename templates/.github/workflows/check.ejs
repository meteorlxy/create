name: check

on:
  push:
    branches:
      - main
  pull_request:
    branches:
      - main
  workflow_dispatch:

jobs:
  check:
    strategy:
      matrix:
        os: [ubuntu-latest, windows-latest, macos-latest]
        node: ['18', '20']

    runs-on: ${{ matrix.os }}

    steps:
      - uses: actions/checkout@v3
      <%_ if (packageManager === 'pnpm') { _%>

      - name: Install pnpm
        uses: pnpm/action-setup@v2
      <%_ } _%>

      - name: Use Node.js ${{ matrix.node }}
        uses: actions/setup-node@v3
        with:
          node-version: ${{ matrix.node }}
          cache: <%- packageManager %>

      - name: Install dependencies
        <%_ if (packageManager === 'npm') { _%>
        run: npm ci
        <%_ } else if (packageManager === 'yarn' || packageManager === 'pnpm') { _%>
        run: <%- packageManager %> install --frozen-lockfile
        <%_ } _%>

      - name: Build
        run: <%- packageManager %> run build

      - name: Lint
        run: <%- packageManager %> run lint
      <%_ if (packageManager === 'pnpm') { _%>

      - name: Test
        run: <%- packageManager %> run test
      <%_ } _%>

  check-result:
    if: ${{ always() }}
    name: check result
    runs-on: ubuntu-latest
    needs: [check]
    steps:
      - if: ${{ contains(needs.*.result, 'failure') || contains(needs.*.result, 'cancelled') }}
        run: exit 1
